{
  "manifest_version": 3,
  "name": "Dashhole",
  "version": "1.1",
  "description": "Replaces em dashes (â€”) with hyphens (-) on ChatGPT, with toggle control.",
  "permissions": ["storage"],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
